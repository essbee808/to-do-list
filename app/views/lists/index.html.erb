<section class="todoapp">
    <header class="header">
        <h1>TO DO LIST</h1>
        <input class="new-todo" placeholder="Make a new list" autofocus="">
    </header>
    <section class="main">
        <input id="toggle-all" class="toggle-all" type="checkbox">
        <label for="toggle-all">Mark all as complete</label>
        <ul class="todo-list">
            <%= @lists.each do |list| %>
                <li>
                    <div class="view">
                        <label><a href="#"><%= list.name %></a></label>
                        <button class="destroy"></button>
                    </div>
                </li>
            <% end %>
        </ul>
    </section>
    <footer class="footer">
    </footer>
</section>
<section class="todoapp">
    <header class="header">
        <h1>TO DO LIST</h1>
          <%= form_for(@list) do |f| %>
            <%= f.text_field :name %>
          <% end %>
    </header>
    <section class="main">
        <input id="toggle-all" class="toggle-all" type="checkbox">
        <label for="toggle-all">Mark all as complete</label>
        <ul class="todo-list">
            <%= @lists.each do |list| %>
                <li>
                    <div class="view">
                        <label><%= link_to list.name, list_path(list) %></label>
                        <button class="destroy"></button>
                    </div>
                </li>
            <% end %>
        </ul>
    </section>
    <footer class="footer">
    </footer>
</section>